{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <div class="row">

    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Date de la visite</th>
                <td>{{ date|date('m/d/Y') }}</td>
            </tr>
            <tr>
                <th>Durée de la visite</th>
                {% if duree == 'halfDay' %}
                    <td>Demi-journée</td>
                {% elseif duree == 'fullDay' %}
                    <td>Journée entière</td>
                {% endif %}
            </tr>
        </table>
    </div>


      <table class="table table-striped table-bordered">
          <thead>
            <tr>
                <th>Visiteur n°</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Âge</th>
                <th>Pays</th>
                <th>Tarif réduit</th>
                <th>Prix</th>
            </tr>
          </thead>
          <tbody>
          {% for visiteur in visiteurs %}
            <tr>
              <td>{{ loop.index }}</td>
              <td>{{ visiteur.prenom }}</td>
              <td>{{ visiteur.nom }}</td>
              <td>{{ visiteur.date_de_naissance|date('m/d/Y') }}</td>
              <td>{{ visiteur.pays }}</td>
              <td>{{ 'oui' }}</td>
              <td>{{ visiteur.0}}€</td>
            </tr>
          {% endfor %}
          </tbody>
      </table>


      <table class="table table-bordered table-striped">
          <tr>
              <th>Prix Total</th>
              <td>{{ prixTotal }}€</td>
          </tr>
      </table>
  </div>
    <a class="btn btn-submit" href="{{ path('coordonnee') }}">Etape suivante</a>
</div>

{% endblock %}