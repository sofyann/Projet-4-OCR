{% extends 'base.html.twig' %}
{% block javascripts %}
{{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript" src="{{ asset('js/stripe.js') }}"></script>
{% endblock %}
{% block body %}

    <div class="container">

        <div class="checkout-steps">
            <div class="row">

                <div class="col-md-3 step-checkout ">
                    <span class="step-title">Détails de la commande</span>
                </div>
                <div class="col-md-3 step-checkout ">
                    <span class="step-title">Vos coordoonées</span>
                </div>
                <div class="col-md-3 step-checkout current-step">
                    <span class="step-title">Paiement</span>
                </div>
                <div class="col-md-3 step-checkout">
                    <span class="step-title">Confirmation</span>
                </div>
            </div>
        </div>

        <h1 class="page-header">Paiement</h1>
        <div class="row col-md-offset-4">
            <div class="col-xs-12 col-sm-12 col-md-6 text-center">
                <p class="price">Prix total : {{ prixTotal }}€</p>
            </div>
        </div>


            <form action="" method="post" id="payment-form">

                <div class="row col-md-offset-3">

                    <div class="col-xs-12 col-sm-12 col-md-4 form-group">
                        <div class="input-group">
                <span class="input-group-addon">
                     <i class="glyphicon glyphicon-user"></i>
                 </span>
                            <input data-stripe="name" class="form-control" type="text" autocomplete="off" id="card-name" required placeholder="Titulaire de la carte"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 form-group">
                        <div class="input-group">
                <span class="input-group-addon">
                     <i class="glyphicon glyphicon-credit-card"></i>
                 </span>
                            <div id="cardNumber-element" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-md-offset-3">
                    <div class="col-xs-12 col-sm-12 col-md-4 form-group">
                        <div class="input-group">
                <span class="input-group-addon">
                     <i class="glyphicon glyphicon-calendar"></i>
                 </span>
                            <div id="cardExpiry-element" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 form-group">
                        <div class="input-group">
                <span class="input-group-addon">
                     <i class="glyphicon glyphicon-lock"></i>
                 </span>
                            <div id="cardCvc-element" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-md-offset-4">
                    <div class="col-xs-12 col-sm-12 col-md-6 text-center">
                        <div id="card-errors" role="alert" class="errorPayment">{{ error }}</div>
                    </div>
                </div>


                <div class="row col-md-offset-4">
                    <div class="col-xs-12 col-sm-12 col-md-6 text-center">
                        <button type="submit" class="js-submit-button btn btn-lg btn-primary">
                            Paiement
                        </button>
                    </div>
                </div>
            </form>
        </div>



{% endblock %}